@model DataLayer.Users

@{
    ViewBag.Title = "حذف کاربر";
}


<h3>آیا از حذف "@Model.UserName" مطمئن هستید ؟</h3>
<div>


    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Roles.RoleTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Roles.RoleTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>

        <dd>
           @Model.RegisterDate.ToString("dddd, dd MMMM yyyy")
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            <a class=" btn btn-info btn-sm" href="@Url.Action("Index")">
                <i class="glyphicon glyphicon-arrow-left"></i>
            </a>
        </div>
    }
</div>

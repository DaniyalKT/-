<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - جانآفند</title>

    <!-- Core CSS - Include with every page -->
    <link href="/Areas/Admin/Content/css/bootstrap-rtl.css" rel="stylesheet">
    <link href="/Areas/Admin/Content/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Areas/Admin/Content/StyleCustomAdmin.css" rel="stylesheet" />

    <!-- Page-Level Plugin CSS - Dashboard -->
    <link href="/Areas/Admin/Content/css/plugins/morris/morris-0.4.3.min.css" rel="stylesheet">
    <link href="/Areas/Admin/Content/css/plugins/timeline/timeline.css" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="/Areas/Admin/Content/css/sb-admin.css" rel="stylesheet">

</head>

<body>

    <div id="wrapper">

        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Admin">پنل مدیریت فروشگاه</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-left">

                <li>
                    <a href="/"><i class="fa fa-sign-out fa-fw"></i>بازگشت به سایت</a>

                </li>
                <!-- /.dropdown -->
            </ul>

            <!-- /.navbar-top-links -->

            <div class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <h1>لوگوی سایت</h1>
                        </li>
                        <li>
                            <a href="/Admin"><i class="fa fa-dashboard fa-fw"></i>داشبرد &nbsp; </a>
                        </li>
                        <li>
                            <a href="#">
                                <i>
                                    <svg class="bi bi-cart3" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                                    </svg>
                                </i>فروشگاه  &nbsp;<span class="fa arrow"></span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Admin/Products">لیست محصولات</a>
                                </li>
                                <li>
                                    <a href="/Admin/Product_Groups">گروه محصولات</a>
                                </li>
                                <li>
                                    <a href="/Admin/Features">ویژگی محصولات </a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->

                        </li>
                        <li>
                            <a href="/Admin/Users"><i class="fa fa-user"></i> &nbsp; کاربران</a>
                        </li>

                        <li>
                            <a href="/Admin/AboutUs"><i class="fa fa-file-text"></i> &nbsp; درباره ما  </a>
                        </li>

                        <li>
                            <a href="/Admin/Companies"><i class="fa fa-home"></i> &nbsp; شرکت ها  </a>
                        </li>
                        <li>
                            <a href="/Admin/OurChoices"><i class="fa fa-group"></i> &nbsp;  چرا انتخاب ما؟ </a>
                        </li>

                        <li>
                            <a href="/Admin/Sliders"><i class="fa fa-picture-o"></i> &nbsp;  اسلایدر</a>
                        </li>
                        <li>
                            <a href="/Admin/ContactUs"><i class="fa fa-phone"></i> &nbsp; تماس با ما</a>
                        </li>

                    </ul>
                    <!-- /#side-menu -->
                    <!-- /.sidebar-collapse -->
                </div>
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.Title</h1>


                    @RenderSection("ProductFilter", false)

                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                @RenderBody()
                <!-- /.row -->
            </div>
            <!-- /#page-wrapper -->
        </div>
    </div>
    <!-- /#wrapper -->
    <!-- Core Scripts - Include with every page -->
    <script src="/Areas/Admin/Content/js/jquery-1.10.2.js"></script>
    <script src="/Areas/Admin/Content/js/bootstrap.min.js"></script>
    <script src="/Areas/Admin/Content/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- Page-Level Plugin Scripts - Dashboard -->
    <script src="/Areas/Admin/Content/js/plugins/morris/raphael-2.1.0.min.js"></script>
    <script src="/Areas/Admin/Content/js/plugins/morris/morris.js"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="/Areas/Admin/Content/js/sb-admin.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.js"></script>
    <script src="~/Areas/Admin/Content/jquery-confirm.min.js"></script>
    <!-- Page-Level Demo Scripts - Dashboard - Use for reference -->
    <script src="/Areas/Admin/Content/js/demo/dashboard-demo.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>


    @RenderSection("Scripts", false)

</body>

</html>
